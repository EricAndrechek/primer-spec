{%- comment -%}
This file renders a single JS object representing a sitemap item.

Schema of `item` (parameter):
| {
  title?: string;
  url: string;
}
| {
  title?: string;
  pages: Array<item>;
}
{%- endcomment -%}
{
  title: "{{ include.item.title | default: '' }}",
  {%- if include.item.url -%}
  url: "{{ include.item.url }}",
  {%- elsif include.item.pages -%}
  pages: [
    {%- for itemChild in include.item.pages -%}
    {% include sitemap_custom_item.liquid item=itemChild %},
    {%- endfor -%}
  ],
  {%- endif -%}
}
